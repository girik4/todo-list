<!DOCTYPE html>
<html>

<head>
    <title>Girik's TODO List</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        body {
            font-family: 'Helvetica Neue', sans-serif;
            background-color: #111;
            margin: 0;
            padding: 0;
        }

        /* ... (rest of the CSS styles remain unchanged) ... */

    </style>
</head>

<body>
    <header class="header">
        <h1>Girik's TODO List</h1>
    </header>
    <div class="container">
        <ul>
            <% todolist.forEach(function(todo, index) { %>
            <li>
                <a href="/todo/delete/<%= index %>" aria-label="Delete">✘</a>
                <a href="/todo/<%= index %>" aria-label="Edit">✎</a>
                <span class="todo-text"><%- todo %></span>
            </li>
            <% }); %>
        </ul>

        <form action="/todo/add/" method="post" class="add-form">
            <label for="newtodo">Things to do:</label>
            <input type="text" name="newtodo" id="newtodo" placeholder="Enter your task here...." autofocus />
            <input type="submit" value="Add" />
        </form>
    </div>
</body>

</html>
